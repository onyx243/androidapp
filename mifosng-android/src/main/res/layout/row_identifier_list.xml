<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/default_vertical_padding"
    android:paddingTop="@dimen/default_vertical_padding"
    android:paddingRight="@dimen/default_vertical_padding">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/gray_light"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="104dp">


            <ImageView
                android:id="@+id/iv_identifier_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_more_vert_black_24dp" />

            <View
                android:id="@+id/v_status"
                android:layout_width="@dimen/layout_padding_16dp"
                android:layout_height="match_parent"
                android:background="@color/green_light" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/v_status"
                android:layout_toRightOf="@id/v_status"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:text="@string/id"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_toEndOf="@id/v_status"
                android:layout_toRightOf="@id/v_status"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:text="@string/type"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView6"
                android:layout_toEndOf="@id/v_status"
                android:layout_toRightOf="@id/v_status"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:text="@string/description"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_identifier_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/iv_identifier_options"
                android:layout_toLeftOf="@id/iv_identifier_options"
                android:layout_toEndOf="@id/textView4"
                android:layout_toRightOf="@id/textView4"
                android:maxLines="1"
                android:paddingStart="@dimen/dimension_32_dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                tools:ignore="RtlSymmetry"
                tools:text="@string/id" />

            <TextView
                android:id="@+id/tv_identifier_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_toEndOf="@id/textView4"
                android:layout_toRightOf="@id/textView4"
                android:maxLines="1"
                android:paddingStart="@dimen/dimension_32_dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                tools:ignore="RtlSymmetry"
                tools:text="@string/type" />

            <TextView
                android:id="@+id/tv_identifier_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView6"
                android:layout_toEndOf="@id/textView4"
                android:layout_toRightOf="@id/textView4"
                android:maxLines="1"
                android:paddingStart="@dimen/dimension_32_dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                tools:ignore="RtlSymmetry"
                tools:text="@string/description" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>